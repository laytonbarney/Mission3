<!--This html page is a shared layout for all my pages-->

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <!--Webpage title-->
    <title>@ViewBag.Title</title>

    <!--This favicon is the icon displayed in the tab next to the website title-->
    <link rel="icon" type="image/x-icon" href="~/img/favicon.ico" />

    <!--link to the css for bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!--Contains my own css styling-->
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
</head>

<body>

    <div class="container">

        <!--Navbar-->
        <ul class="nav nav-pills">
            <li class="nav-item">
                <a class="nav-link" asp_controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp_controller="Home" asp-action="GradeCalc">Grade Calculator</a>
            </li>

        </ul>


        <div>
            @RenderBody()

        </div>

        

        <!--Link to the js for bootstrap-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    </div>
</body>


</html>
