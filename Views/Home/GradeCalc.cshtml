@{
    ViewData["Title"] = "IS 413 Grade Calculator";
}

@model GradeCalcModel;


<!--This is the form for the inputs used in the grade calculator-->
<h2>Grade Calculator</h2>
<p>Use this calculator to calculate your final grade in the class.</p>
<p>All values must be a numeric value of 100 or less.</p>

<div>
    <form method="post" class="mb-3 needs-validation" novalidate>
        
        <div class="col-sm-3">
            <label for="assignements" class="form-label">Assignments: </label>
            <input type="number" class="form-control" id="assignements" asp-for="Assignements" required>
        </div>
        
        <div class="col-sm-3">
            <label for="quizzes" class="form-label">Quizzes: </label>
            <input type="number" id="quizzes" class="form-control" asp-for="Quizzes" required>
        </div>
        
        <div class="col-sm-3">
            <label for="intex" class="form-label">INTEX: </label>
            <input type="number" id="intex" class="form-control" asp-for="Intex" required>
        </div>
        
        <div class="col-sm-3">
            <label for="extracredit" class="form-label">Extra Credit: </label>
            <input type="number" id="extracredit" class="form-control" asp-for="Extracredit" required>
        </div><br />
        <!--<div class="col-12">
            <input id="btnSend" class="btn btn-primary mb-3" type="submit" value="Submit">
        </div>-->
        <div class="col-12">
            <button id="btnSend" class="btn btn-primary" type="submit">Submit</button>
        </div>

    </form>
</div>

<!--This references my jquery-->
<script src="//code.jquery.com/jquery-3.6.0.min.js" type="text/javascript"></script>

<!--This references my javascript-->
<script src="~/js/myScript.js" type="text/javascript"></script>

